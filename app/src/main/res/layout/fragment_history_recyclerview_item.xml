<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/purple_500"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/history_card_margin"
    app:cardCornerRadius="@dimen/cardViewHistory"
    app:cardElevation="@dimen/cardViewElevation"
    android:id="@+id/card_view">

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historyRecyclerCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/history_item_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/history_item_city_text_size"
            android:textStyle="bold"
            tools:text = "Москва"/>

        <TextView
            android:id="@+id/historyRecyclerData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/history_item_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/history_item_data_text_size"
            android:textStyle="bold"
            tools:text = "геоданные"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
